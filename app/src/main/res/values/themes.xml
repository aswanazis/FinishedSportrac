<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ItemFinder" parent="Theme.Design.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#3e3e6e</item>
        <item name="colorPrimaryVariant">#3e3e6e</item>
        <item name="colorOnPrimary">#3e3e6e</item>
        <item name="colorSurface">#FF0000</item> <!-- Add this line -->

        <!-- Secondary brand color. -->
        <item name="colorSecondary">#3e3e6e</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="titleTextColor">@color/brown</item>
        <item name="fragmentBgColor">@color/creamy</item>
    </style>
    <attr name="titleTextColor" format="color"/>
    <attr name="fragmentBgColor" format="color"/>

    <style name="roundedCorner" parent="Widget.MaterialComponents.ShapeableImageView">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50dp</item>
    </style>

</resources>